<ColorBlock>
	canvas.before:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size
	            
<ColorPickerView>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        BoxLayout:
        	padding: (dp(20), dp(30))	
        	orientation: 'horizontal'
        	ColorBlock:
	        	size_hint_x: 0.25
	        	size_hint_y: 0.75
        		id: selectedColor
        		color: colorWheel.color
	        RelativeLayout:
	        	size_hint_x: 0.75
		    	ColorWheel:
		    		size_hint_y: 1.0
		    		id: colorWheel
    	IconButton:
    		size_hint_y: 0.2
			text: "\357\200\214"
    		on_press: root.on_select()
