<ChannelValueView>:
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 0.5
        Rectangle:
            pos: self.pos
            size: self.size            

    orientation: 'horizontal'
    FieldLabel:
        size_hint_x: 0.4
        id: channel
        text: root.channel
        halign: 'right'
    FieldLabel:
        size_hint_x: 0.4
        id: lap
        halign: 'right'
        text: ' {} :: {}  '.format(root.session, root.lap)
    BarGraphGauge:
        size_hint_x: 0.20
        id: value

<ChannelValuesView>:
    options_enabled: False
    BoxLayout:
        ScrollContainer:
            id: scroller
            do_scroll_x:False
            do_scroll_y:True
            GridLayout:
                id: channel_values
                row_default_height: root.height * 0.12
                row_force_default: True
                size_hint_y: None
                height: max(self.minimum_height, scroller.height)
                cols: 1
