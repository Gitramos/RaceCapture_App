<BigNumberView>:
    rcid: 'bignumberview'
	RoundedRect:
		rcid: 'bg'
		rect_color: root.tile_color
	BoxLayout:
		orientation: 'vertical'
	    Label:
	    	id: value
	    	color: root.title_color
	    	size_hint_y: 0.8
	    	on_texture: root.change_font_size()
	    	font_size: self.height
	    	font_name: "resource/fonts/ASL_light.ttf"
	    Label:
	    	id: title
			font_name: "resource/fonts/ASL_light.ttf"
	    	color: root.title_color
	    	size_hint_y: 0.1
	    	font_size: self.height
	    	text: root.title
	    BoxLayout:
            size_hint_y: 0.1
